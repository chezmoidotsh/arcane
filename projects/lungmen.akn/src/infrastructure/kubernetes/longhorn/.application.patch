apiVersion: arcane.chezmoi.sh/v1alpha1
kind: ApplicationPatch
metadata: {}
spec:
  info:
    # -- Application metadata
    - name: Description
      value: Cloud-native distributed block storage for Kubernetes
    - name: Category
      value: Storage / Block Storage
    - name: Version
      # renovate: datasource=helm depName=longhorn registryUrl=https://charts.longhorn.io/
      value: "1.11.0"
    # -- Documentation & Resources
    - name: Documentation
      value: https://longhorn.io/docs/
    - name: GitHub Repository
      value: https://github.com/longhorn/longhorn
    - name: Helm Chart
      value: https://github.com/longhorn/charts

  syncPolicy:
    automated:
      enabled: false # Avoid automatic updates due to potential storage disruptions