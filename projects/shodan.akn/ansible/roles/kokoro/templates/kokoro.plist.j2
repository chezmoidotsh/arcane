<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>sh.chezmoi.shodan.kokoro</string>

    <key>UserName</key>
    <string>{{ lookup('env', 'USER') }}</string>

    <key>ProgramArguments</key>
    <array>
        <string>{{ kokoro_install_dir }}/.venv/bin/uvicorn</string>
        <string>api.src.main:app</string>
        <string>--host</string>
        <string>127.0.0.1</string>
        <string>--port</string>
        <string>{{ kokoro_port }}</string>
    </array>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>{{ kokoro_install_dir }}/.venv/bin:/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin</string>
        <key>PYTHONPATH</key>
        <string>{{ kokoro_install_dir }}:{{ kokoro_install_dir }}/api</string>
        <key>USE_GPU</key>
        <string>false</string>
        <key>USE_ONNX</key>
        <string>false</string>
        <key>MODEL_DIR</key>
        <string>src/models</string>
        <key>VOICES_DIR</key>
        <string>src/voices/v1_0</string>
        <key>ESPEAK_DATA_PATH</key>
        <string>/opt/homebrew/share/espeak-ng-data</string>
    </dict>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardErrorPath</key>
    <string>{{ kokoro_log_dir }}/kokoro.err.log</string>

    <key>StandardOutPath</key>
    <string>{{ kokoro_log_dir }}/kokoro.out.log</string>

    <key>WorkingDirectory</key>
    <string>{{ kokoro_install_dir }}</string>
</dict>
</plist>
