---
# Traefik Static Configuration
# Managed by Ansible - DO NOT EDIT MANUALLY

accessLog:
  filePath: "/var/log/traefik/access.log"
  format: "json"
  bufferingSize: 100
  filters:
    statusCodes:
      - "200-299"
      - "400-499"
      - "500-599"
    retryAttempts: true
    minDuration: "100ms"
  fields:
    defaultMode: "drop"
    names:
      ClientAddr: "keep"
      ClientHost: "keep"
      DownstreamContentSize: "keep"
      DownstreamStatus: "keep"
      Duration: "keep"
      RequestMethod: "keep"
      RequestPath: "keep"
      RequestProtocol: "keep"
      RetryAttempts: "keep"
      ServiceName: "keep"
      StartUTC: "keep"
      TLSCipher: "keep"
      TLSVersion: "keep"
    headers:
      defaultMode: "drop"
      names:
        Authorization: "redact"
        Content-Type: "keep"
        Cookie: "redact"
        User-Agent: "keep"
        X-Forwarded-For: "keep"
        X-Forwarded-Proto: "keep"
        X-Real-Ip: "keep"

api:
  insecure: true
  dashboard: true

providers:
  http:
    endpoint: "http://pangolin:3001/api/v1/traefik-config"
    pollInterval: "5s"
  file:
    filename: "/etc/traefik/dynamic_config.yml"

experimental:
  plugins:
    badger:
      moduleName: "github.com/fosrl/badger"
      version: "v1.2.0"
    crowdsec:
      moduleName: "github.com/maxlerebourg/crowdsec-bouncer-traefik-plugin"
      version: "v1.4.4"

log:
  level: "{{ pangolin_log_level | upper }}"
  format: "common"

certificatesResolvers:
  letsencrypt:
    acme:
      httpChallenge:
        entryPoint: web
      email: {{ pangolin_acme_email }}
      storage: "/letsencrypt/acme.json"
      caServer: "{{ pangolin_acme_ca_server }}"

entryPoints:
  web:
    address: ":{{ pangolin_http_port }}"
  websecure:
    address: ":{{ pangolin_https_port }}"
    transport:
      respondingTimeouts:
        readTimeout: "30m"
    http:
      middlewares:
        - crowdsec@file
      tls:
        certResolver: "letsencrypt"

serversTransport:
  insecureSkipVerify: true

ping:
    entryPoint: "web"
