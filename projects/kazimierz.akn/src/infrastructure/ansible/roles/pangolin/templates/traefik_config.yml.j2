---
# Traefik Static Configuration
# Managed by Ansible - DO NOT EDIT MANUALLY

api:
  insecure: true
  dashboard: true

providers:
  http:
    endpoint: "http://pangolin:3001/api/v1/traefik-config"
    pollInterval: "5s"
  file:
    filename: "/etc/traefik/dynamic_config.yml"

experimental:
  plugins:
    badger:
      moduleName: "github.com/fosrl/badger"
      version: "v1.2.0"

log:
  level: "{{ pangolin_log_level | upper }}"
  format: "common"

certificatesResolvers:
  letsencrypt:
    acme:
      httpChallenge:
        entryPoint: web
      email: {{ pangolin_acme_email }}
      storage: "/letsencrypt/acme.json"
      caServer: "{{ pangolin_acme_ca_server }}"

entryPoints:
  web:
    address: ":{{ pangolin_http_port }}"
  websecure:
    address: ":{{ pangolin_https_port }}"
    transport:
      respondingTimeouts:
        readTimeout: "30m"
    http:
      tls:
        certResolver: "letsencrypt"

serversTransport:
  insecureSkipVerify: true

ping:
    entryPoint: "web"
